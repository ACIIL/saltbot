{
	"manifest_version": 2,

	"name": "SaltBot",
	"description": "This extension automates betting on SaltyBet.com.",
	"version": "2.0.2",
	"permissions": ["storage", "unlimitedStorage", "tabs", "alarms", "http://www.twitch.tv/saltybet"],
	"content_scripts": [
		{
			"matches": ["http://*.saltybet.com/"],
			"js": ["lib/FileSaver.min.js", "records.js", "tracker.js", "strategy.js", "salty.js"]
		},
		{
			"matches": ["http://www.twitch.tv/saltybet"],
			"js": ["twitch_content.js"]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["twitch_background.js"]
	},
	"browser_action": {
		"default_icon": "32.png",
		"default_popup": "popup.html"
	}, 
	"icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png"
	}
}